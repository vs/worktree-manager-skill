{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$comment": "Optional project-specific configuration for worktree-manager. Place at .claude/worktree.json in your project root.",

  "ports": {
    "count": 2,
    "services": ["api", "frontend"]
  },

  "install": "uv sync",

  "validate": {
    "start": "PORT={{PORT}} docker-compose up -d",
    "healthCheck": "curl -sf http://localhost:{{PORT}}/health",
    "healthCheckTimeout": 30,
    "stop": "docker-compose down"
  },

  "copyDirs": [".agents", ".env.example"],

  "preBranch": null,
  "postCreate": null
}
